.container-fluid
  %p#notice= notice
  %h4 Users
  %table#dataTable.table.table-bordered{:cellspacing => "0", :width => "100%"}
    %thead
      %tr
        %th{:width => "25%"} Name
        %th Email
        %th Password
        %th{:width => "15%"}
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= if user.password_digest |
                '******'              |
              else                    |
                ''                    |
              end                     |
          %td
            = link_to 'Show', user
            = link_to 'Edit', edit_user_path(user)
            = link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New User', new_user_path
