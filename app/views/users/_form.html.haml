/ Breadcrumbs
.container-fluid
  %ol.breadcrumb
    %li.breadcrumb-item
      %a{:href => "#"} Rails Tutorial
    %li.breadcrumb-item.active Users
.container-fluid
  .row
    .col-sm-12
      %p#notice= notice
      %h4 Users
      = form_with(model: user, local: true) do |form|
        - if user.errors.any?
          #error_explanation
            %h2
              = pluralize(user.errors.count, "error")
              prohibited this user from being saved:
            %ul
              - user.errors.full_messages.each do |message|
                %li= message
        .field
          = form.label :name
          = form.text_field :name, id: :user_name, class: 'form-control'
        .field
          = form.label :email
          = form.text_field :email, id: :user_email, class: 'form-control'
        .field
          = form.label :password
          = form.text_field :password, id: :user_password, class: 'form-control'
        .actions
          = form.submit
